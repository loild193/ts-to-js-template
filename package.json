{
  "name": "ts-to-js-template",
  "version": "1.0.0",
  "description": "A Typescript compile to Javascript template",
  "main": "./dist/index.js",
  "packageManager": "pnpm@8.6.12",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "test": "echo \"Error: no test specified\" && exit 1",
    "ts-check": "tsc --noemit",
    "lint": "eslint -c .eslintrc.js --ext .ts src --quiet",
    "format": "pnpm prettier --config .prettierrc 'src/**/*.ts' --write",
    "build": "etsc"
  },
  "keywords": [
    "typescript",
    "javascript",
    "build",
    "compile",
    "template"
  ],
  "author": "LoiLD",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.5.1",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "esbuild": "^0.19.2",
    "esbuild-node-tsc": "^2.0.5",
    "eslint": "^8.47.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsdoc": "^46.4.6",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.6"
  }
}
